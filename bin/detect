#!/usr/bin/env bash
# bin/detect <build-dir>
echo $ENV_DIR
echo $1
echo 'Before ${1}'
if ([ -f $ENV_DIR/FRONTEND_PATH ] && [ -f $1<$ENV_DIR/FRONTEND_PATH/package.json ]) || [ -f $1/package.json ] ; then
  echo 'Node.js'
  exit 0
fi

>&2 echo "Colm ${1} ${ENV_DIR} Node.js: package.json not found in application root"
exit 1
